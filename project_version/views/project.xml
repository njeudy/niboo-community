<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="project_version_form" model="ir.ui.view">
        <field name="name">project.version.form</field>
        <field name="model">project.version</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state_id" widget="statusbar" clickable="True"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group colspan="2">
                        <field name="major"/>
                        <field name="project_id"/>
                    </group>
                    <field name="task_ids" attrs="{'invisible': [('project_id', '=', False)]}"
                           domain="[('project_id', '=', project_id), ('version_id', '=', False)]"
                           context="{'default_project_id': project_id, 'default_version_id': active_id}" widget="many2many"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_version_tree" model="ir.ui.view">
        <field name="name">project.version.tree</field>
        <field name="model">project.version</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="major"/>
                <field name="project_id"/>
            </tree>
        </field>
    </record>

    <record id="project_version_search" model="ir.ui.view">
        <field name="name">project.version.search</field>
        <field name="model">project.version</field>
        <field name="arch" type="xml">
            <search>
                <field name="project_id"/>
                <field name="state_id"/>
                <field name="name"/>
                <field name="major"/>
            </search>
        </field>
    </record>

    <act_window id="project_version_action"
                name="Versions"
                groups=""
                res_model="project.version"
                view_mode="tree,form"
                context="{}"
                view_type="form"/>

    <menuitem id="project_version_menu" name="Versions" parent="project.menu_project_management"
              action="project_version_action" groups="" sequence="10"/>

    <record id="view_task_form2" model="ir.ui.view">
        <field name="name">view_task_form2</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_deadline']" position="after">
                <field name="requires_version" invisible="1"/>
                <field name="version_id" domain="[('project_id', '=', project_id)]"
                       attrs="{'invisible': [('project_id', '=', False)], 'required': [('requires_version', '=', True)]}"  context="{'default_project_id': project_id}"/>
            </xpath>
        </field>
    </record>

    <record id="view_task_tree2" model="ir.ui.view">
        <field name="name">project.task.tree</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="version_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_task_kanban" model="ir.ui.view">
        <field name="name">view_task_kanban</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='legend_done']" position="after">
                <field name="version_id"/>
            </xpath><xpath expr="//div[@class='oe_kanban_bottom_right']/.." position="after">
            <div style="clear: both; text-align: center;">
                <t t-if="record.version_id.raw_value">
                    <button title="Version" class="btn btn-primary btn-xs" type="object" name="go_to_version_action" style="margin-right: 5px;"><field name="version_id"/></button>
                </t>
            </div>
        </xpath>
        </field>
    </record>

    <record id="edit_project" model="ir.ui.view">
        <field name="name">project.project.form.inherit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='privacy_visibility']" position="after">
                <field name="requires_version"/>
            </xpath>
        </field>
    </record>
</odoo>
