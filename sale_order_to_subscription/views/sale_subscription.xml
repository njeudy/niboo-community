<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_subscription_view_form" model="ir.ui.view">
        <field name="name">sale.subscription.form.view.inherited</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_contract.sale_subscription_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_account_id']" position="attributes">
                <attribute name="readonly">0</attribute>
                <attribute name="domain">[('partner_id', '=', partner_id)]</attribute>
            </xpath>
        </field>
    </record>
</odoo>
